install:
	curl -L -O https://github.com/Obed-Ababio/terminaide/raw/master/dist/aide
	curl -L -O https://github.com/Obed-Ababio/terminaide/raw/master/dist/makefile
	mv aide /usr/local/bin
	chmod +x /usr/local/bin/aide
	rm makefile
	echo "Installation completed! You can run the program by typing 'aide <query in plain text>' in the terminal."
